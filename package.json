{
  "name": "kbj-la-meujie",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "check-types": "tsc --pretty --noEmit",
    "check-format": "prettier --check \"**/*.+(ts|tsx|js|jsx|json|css|md)\"",
    "prettify": "prettier --write \"**/*.+(ts|tsx|js|jsx|json|css|md)\"",
    "test-all": "npm run lint:fix && npm run prettify && npm run check-types && npm run build",
    "prepare": "husky install"
  },
  "dependencies": {
    "next": "14.0.2",
    "react": "^18",
    "react-dom": "^18",
    "react-xarrows": "^2.0.2"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.0.1",
    "eslint": "^8",
    "eslint-config-next": "14.0.2",
    "postcss": "^8",
    "prettier": "^3.1.0",
    "tailwindcss": "^3.3.0",
    "typescript": "^5",
    "husky": "^8.0.0"
  }
}
